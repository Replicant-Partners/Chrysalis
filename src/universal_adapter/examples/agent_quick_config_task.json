{
  "name": "agent_quick_config",
  "version": "1.0.0",
  "taskId": "task-agent-quick-001",
  "taskType": "agent_config",
  "priority": "normal",

  "goal": {
    "description": "Produce a minimal UniformSemanticAgentV2-compatible config block",
