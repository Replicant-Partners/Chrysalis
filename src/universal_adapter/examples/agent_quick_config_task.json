    "capabilities": ["research", "synthesis"],
    "llm_provider": "anthropic",
    "llm_model": "claude-3-5-sonnet-20241022"
  },

  "prompts": [
    {
      "template": "{\n  \"identity\": {\n    \"name\": \"{{name}}\",\n    \"designation\": \"{{designation}}\",\n    \"bio\": \"{{bio}}\",\n    \"fingerprint\": \"generated\",\n    \"version\": \"1.0.0\"\n  },\n  \"personality\": {\n    \"core_traits\": {{traits}}\n  },\n  \"capabilities\": {\n    \"primary\": {{capabilities}},\n    \"domains\": [],\n    \"secondary\": []\n  },\n  \"llm\": {\n    \"provider\": \"{{llm_provider}}\",\n    \"model\": \"{{llm_model}}\"\n  }\n}",
      "role": "user",
      "description": "Render agent config with provided inputs"
    }
  ],

  "flow_diagram": {
    "mermaid": "graph TD\n    START --> P0\n    P0 --> GOAL\n    GOAL -->|goal_met| END\n    GOAL -->|goal_failed| END"
