{
  "type": "translate",
  "name": "Translate USA Agent to MCP Format",
  "sourceProtocol": "usa",
  "targetProtocol": "mcp",
  "agent": {
    "apiVersion": "usa/v2",
    "kind": "Agent",
    "metadata": {
      "name": "FileManagerAgent",
      "version": "1.0.0",
      "tags": ["filesystem", "utility"]
    },
    "identity": {
      "name": "File Manager",
      "role": "File system management assistant",
      "goal": "Help users manage files and directories efficiently",
      "backstory": "An intelligent file system assistant with expertise in file operations, search, and organization"
    },
    "capabilities": {
      "tools": [
        {
          "name": "read_file",
          "description": "Read the contents of a file",
          "parameters": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Path to the file to read"
              }
            },
            "required": ["path"]
          }
        },
        {
          "name": "write_file",
          "description": "Write content to a file",
          "parameters": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Path to the file"
              },
              "content": {
                "type": "string",
                "description": "Content to write"
              }
            },
            "required": ["path", "content"]
          }
        },
        {
          "name": "list_directory",
          "description": "List contents of a directory",
          "parameters": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Directory path"
              }
            },
            "required": ["path"]
          }
        }
      ],
      "reasoning": {
        "enabled": true,
        "strategy": "step-by-step"
      }
    },
    "execution": {
      "llm": {
        "provider": "ollama",
        "model": "ministral-3:3b",
        "temperature": 0.3
      }
    }
  },
  "options": {
    "includeConfidence": true
  },
  "metadata": {
    "description": "Translate a USA file manager agent to MCP server format",
    "created": "2026-01-16T23:00:00Z",
    "author": "Chrysalis Team"
  }
}