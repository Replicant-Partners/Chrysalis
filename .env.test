# Chrysalis Test Environment Configuration
# Copy this file to .env.local for local development

# Memory Service
MEMORY_API_URL=http://localhost:8082
MEMORY_API_ENABLED=true

# System Agents Service
SYSTEM_AGENTS_URL=http://localhost:3200

# Gateway LLM Service
GATEWAY_LLM_URL=http://localhost:8080
GATEWAY_LLM_MODEL=gpt-4

# YJS Collaboration (optional)
YJS_ENABLED=false
YJS_WEBSOCKET_URL=ws://localhost:1234

# Feature Flags
ENABLE_MEMORY=true
ENABLE_LEARNING=false
ENABLE_DOCUMENT_DROP=true
SHOW_MEMORY_INDICATORS=true

# Canvas Configuration
CANVAS_SNAP_TO_GRID=true
CANVAS_SHOW_GRID=true
CANVAS_GRID_SIZE=20
MAX_MESSAGES_PER_PANE=500

# Panel Sizes (percentages)
DEFAULT_LEFT_WIDTH=25
DEFAULT_CENTER_WIDTH=50
DEFAULT_RIGHT_WIDTH=25

# API Keys (for testing - use mock values or set in .env.local)
# VOYAGE_API_KEY=your_key_here
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here

# Fireproof CRDT (optional)
FIREPROOF_ENABLED=false

# Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# Development
NODE_ENV=development
VITE_APP_VERSION=0.31.0

# Logging
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Browser Service (embedded browser)
BROWSER_ALLOWED_PROTOCOLS=http:,https:
BROWSER_BLOCKED_DOMAINS=

# Rate Limiting
RATE_LIMIT_ACTIONS=100
RATE_LIMIT_WINDOW_MS=1000
