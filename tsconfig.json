{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "mcp-servers/**/*",
    "tests/**/*",
    "ui/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}