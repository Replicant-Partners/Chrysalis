{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/adapters/**/*",
    "src/agents/**/*",
    "src/api/**/*",
    "src/bridge/**/*",
    "src/config/**/*",
    "src/core/AdapterRegistry.ts",
    "src/core/config/**/*",
    "src/core/errors.ts",
    "src/core/index.ts",
    "src/services/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "shared/**/*",
    "mcp-servers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/agents/AgentChatController.ts",
    "src/bridge/orchestrator.ts",
    "src/bridge/orchestrator"
  ]
}
