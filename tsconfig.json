{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/agents/**/*",
    "src/api/adapter-tasks/**/*",
    "src/canvas/**/*",
    "src/canvas-app/**/*",
    "src/config/**/*",
    "src/components/**/*",
    "src/core/**/*",
    "src/adapters/**/*",
    "src/services/gateway/**/*",
    "src/services/agents/**/*",
    "src/services/ledger/**/*",
    "src/services/llm/**/*",
    "src/terminal/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "src/main.tsx",
    "shared/**/*",
    "mcp-servers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/services/llm/WalletKeyProvider.ts",
    "src/cli/**/*",
    "src/tui/**/*",
    "src/converter/**/*"
  ]
}