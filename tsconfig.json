{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "mcp-servers/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ui",
    "src/observability",
    "src/components",
    "src/learning",
    "src/agents/AgentChatController.ts",
    "src/integrations/agentbuilder",
    "src/sync/CRDTState.ts",
    "src/sync/GossipProtocol.ts",
    "src/security/ApiKeyRegistry.ts"
  ]
}