{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/agents/**/*",
    "src/api/adapter-tasks/**/*",
    "src/api/system-agents/**/*",
    "src/canvas/**/*",
    "src/config/**/*",
    "src/core/AdapterRegistry.ts",
    "src/core/FrameworkAdapter.ts",
    "src/core/SemanticAgent.ts",
    "src/core/config/**/*",
    "src/core/errors.ts",
    "src/core/index.ts",
    "src/services/gateway/**/*",
    "src/services/agents/**/*",
    "src/services/ledger/**/*",
    "src/services/llm/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "shared/**/*",
    "mcp-servers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/agents/AgentChatController.ts",
    "src/services/llm/WalletKeyProvider.ts"
  ]
}