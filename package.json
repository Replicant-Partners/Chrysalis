{
  "name": "chrysalis",
  "version": "3.1.0",
  "description": "Uniform Semantic Agent Morphing System - Framework-transcendent agents built on universal patterns",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run test:unit && npm run test:mcp",
    "test:unit": "jest --passWithNoTests",
    "test:mcp": "npm run build:mcp && node --test mcp-servers/cryptographic-primitives/tests/*.js mcp-servers/distributed-structures/tests/*.js",
    "build:mcp": "tsc -p mcp-servers/cryptographic-primitives/tsconfig.json && tsc -p mcp-servers/distributed-structures/tsconfig.json",
    "dev": "ts-node src/index.ts",
    "demo:milestone1": "npm run build && node dist/demo/milestone1/run-demo-processes.js",
    "service:ledger": "npm run build && node dist/services/ledger/run-ledger.js",
    "service:projection": "npm run build && node dist/services/projection/run-projection.js",
    "service:grounding": "npm run build && node dist/services/grounding/run-grounding.js",
    "service:skillforge": "npm run build && node dist/services/skillforge/run-skillforge.js",
    "service:gateway": "npm run build && node dist/services/capability-gateway/run-gateway.js"
  },
  "keywords": [
    "agent",
    "morphing",
    "crewai",
    "elizaos",
    "mcp",
    "distributed-systems",
    "crdt",
    "gossip-protocol",
    "byzantine-tolerance",
    "universal-patterns"
  ],
  "author": "Chrysalis Project",
  "license": "MIT",
  "bin": {
    "chrysalis": "dist/cli/chrysalis-cli.js",
    "agent-morph": "dist/cli/agent-morph.js",
    "agent-morph-v2": "dist/cli/agent-morph-v2.js"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.8",
    "@grpc/proto-loader": "^0.7.10",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@noble/curves": "^1.9.7",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.48.0",
    "@opentelemetry/exporter-prometheus": "^0.48.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.48.0",
    "@opentelemetry/resources": "^1.22.0",
    "@opentelemetry/sdk-metrics": "^1.22.0",
    "@opentelemetry/sdk-node": "^0.48.0",
    "@opentelemetry/semantic-conventions": "^1.22.0",
    "@noble/ed25519": "^2.3.0",
    "@noble/hashes": "^1.8.0",
    "@types/js-yaml": "^4.0.9",
    "@types/uuid": "^10.0.0",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.13.2",
    "commander": "^11.1.0",
    "dotenv": "^17.2.3",
    "graphlib": "^2.1.8",
    "js-yaml": "^4.1.1",
    "simple-statistics": "^7.8.8",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.29",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/graphlib": "^2.1.12",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.0.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "type": "commonjs",
  "workspaces": [
    "packages/*",
    "ui"
  ]
}
